extend layouts/layout.pug

block Modal
  title Detail
  
block Main
  .detailPage
    .container.mb-5
      .mt-3.pb-3.border-bottom-green
        +page-url(["Trang chủ", "Sản phẩm","Trang sức", "Lắc tay"])
      .row.mt-5
        .col-2.col-xl-1
          .preview-product-box.h-100.d-flex.justify-content-center.align-items-center
            ul.preview-product
              li
                i(class="fas fa-arrow-up")
              each img in detailProduct.imgs
                li 
                  img.w-100(src=img, alt="img")
              li
                i(class="fas fa-arrow-down")
        .col-10.col-xl-6
            img.w-100(src=detailProduct.imgs[3], alt="img")
        .col-12.col-xl-5
          h3.mb-2= detailProduct.name
          .product-code.mb-2= detailProduct.code
          .product-price.mb-4
            .product-price-new= detailProduct.newPrice
            .product-price-old= detailProduct.oldPrice
          p.mb-3.product-info= detailProduct.info
          form
            label Màu sắc
            select
              each color in detailProduct.color
                option= color
            label Kích thước
            select
              each size in detailProduct.size
                option= size
            label Số lượng
            input(type="number" value="1")
          .group-detail-button.mt-4
            button Mua hàng 
            button 
              i(class="fas fa-heart")
            button 
              i(class="fas fa-sync-alt")
      .row.mt-5
        .col-12.col-xl-9
          .infos-title
            h4
              a.mr-3.active(href="#") Đặc điểm nổi bật
            h4
              a.mr-3(href="#") Thông tin sản phẩm
            h4
              a.mr-3(href="#") Đánh giá 
          .infos-content.mt-4
            .box-60.p-2
              +paragraph(paragraph.title,paragraph.content)
            .box-40.p-2
              img.w-100(src=detailProduct.imgs[3], alt="img")
            .box-40.p-2
              img.w-100(src=detailProduct.imgs[2], alt="img")
            .box-60.p-2
              +paragraph(paragraph.title,paragraph.content)
            .box-60.p-2
              +paragraph(paragraph.title,paragraph.content)
            .box-40.p-2
              img.w-100(src=detailProduct.imgs[1], alt="img")
        .col-xl-3
          .preview-products-box
            h4
              a.mr-3.active(href="#") Sản phẩm bán chạy
            .mt-4.mb-4
              +preview-column-products(gridProducts)
            h4
              a.mr-3.active(href="#") Sản phẩm mua nhiều
            .mt-4
              +preview-column-products(gridProducts)